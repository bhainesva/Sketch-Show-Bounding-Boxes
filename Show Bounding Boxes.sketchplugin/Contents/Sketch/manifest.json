{
  "name": "Show Bounding Boxes ",
  "description": "Sketch plugin that shows bounding boxes of all layers",
  "author": "pravdomil.com",
  "homepage": "https://github.com/pravdomil/Sketch-Show-Bounding-Boxes",
  "identifier": "com.pravdomil.showBoundingBoxes",
  "version": "0.0.2",
  "compatibleVersion": 40,
  "commands": [
    {
      "script": "script.js",
      "handlers": {
        "actions": {
          "Startup": "onStart"
        }
      }
    },
    {
      "name": "Show Bounding Boxes",
      "script": "script.js",
      "identifier": "showBoundingBoxes",
      "handler": "showBoundingBoxes"
    },
    {
      "name": "Toggle Cross Marks",
      "script": "script.js",
      "identifier": "toggleBoundingBoxesCrossMarks",
      "handler": "toggleBoundingBoxesCrossMarks"
    },
    {
      "name": "Buy a Beer",
      "script": "script.js",
      "identifier": "donateShowBoundingBoxes",
      "handler": "donateShowBoundingBoxes"
    }
  ],
  "menu": {
    "items": [
      "showBoundingBoxes",
      "toggleBoundingBoxesCrossMarks",
      "-",
      "donateShowBoundingBoxes"
    ]
  }
}
